<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd   http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

    <jaxrs:server id="bidderServices" address="/bidder">
        <jaxrs:serviceBeans>
            <ref bean="bidderServiceBean"/>
            <ref bean="countryServiceBean"/>
            <ref bean="playerServiceBean"/>
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <ref bean="jacksonJsonProvider"/>
        </jaxrs:providers>
    </jaxrs:server>

    <bean id="bidderServiceBean" class="com.kade.apecricket.resource.BidResource"/>
    <bean id="countryServiceBean" class="com.kade.apecricket.resource.CountryResource"/>
    <bean id="playerServiceBean" class="com.kade.apecricket.resource.PlayerResource"/>
    <bean id="jacksonJsonProvider" class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider"/>
</beans>
